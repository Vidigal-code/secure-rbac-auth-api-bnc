PORT=3000
NODE_ENV=development

# CORS (separado por vírgula). Ex: http://localhost:5173,http://localhost:3001
CORS_ORIGINS=

# Helmet CSP (true/false). Em API pura, CSP costuma ser opcional.
HELMET_CSP_ENABLED=false

# Tokens (JWT interno assinado + JWE criptografado)
JWT_SECRET=troque-este-segredo
JWE_SECRET=troque-este-segredo-jwe
JWT_EXPIRES_IN_SECONDS=900
REFRESH_EXPIRES_IN_SECONDS=604800

# SQL Server (Docker Compose)
# O docker-compose.yml usa DB_NAME/DB_PASSWORD para montar o DATABASE_URL interno.
DB_NAME=secure_rbac_auth
DB_PASSWORD=YourStrong!Passw0rd

# SQL Server (local - opcional)
# Se você rodar a API fora do Docker e quiser apontar para um SQL Server local,
# você pode definir DATABASE_URL manualmente (senão, use o docker compose).
DATABASE_URL=sqlserver://localhost:1433;database=secure_rbac_auth;user=sa;password=YourStrong!Passw0rd;encrypt=true;trustServerCertificate=true

# Seed (credenciais para avaliação)
SEED_ADMIN_EMAIL=admin@local.test
SEED_ADMIN_PASSWORD=Admin@123

SEED_USER_EMAIL=user@local.test
SEED_USER_PASSWORD=User@123
